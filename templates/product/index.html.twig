{% extends 'base.html.twig' %}

{% block body %}

    <div class="containeur m-5">

        <div class="row">
            <div class="col-md-6">
                <img src="/uploads/{{product.illustration}}" class="img-fluid alt="{{product.name}}"">
            </div>
            <div class="col-md-6">
                <p><a href="{{ path ('app_category', { slug : product.category.slug } )}}">{{product.category.name}}</a> > {{product.name}}</p>
            <h1>{{product.name}}</h1>
            <span class="d-block mb-3">{{product.priceWt|price}}</span>
            {{product.description|raw}}
            <a href="{{ path ('app_cart_add', { id : product.id } )}}" class="btn btn-dark my-3">Ajouter au panier</a>
            </div>
        </div>

    </div>

{% endblock %}
