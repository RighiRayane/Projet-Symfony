{% extends 'base.html.twig' %}

{% block body %}
    <div class="containeur mx-5 my-5 ">
        <h1>Connexion</h1>

    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

        <form action="{{ path('app_login') }}" method="post">
            <label class="mt-3" for="username">Votre Email :</label>
            <input class="form-control" type="text" id="username" name="_username" value="{{ last_username }}">

            <label class="mt-3" for="password">Votre mot de passe :</label>
            <input class="form-control" type="password" id="password" name="_password">

            <input type="hidden" name="_target_path" value="{{ path('app_account') }}"> 

            <button class="btn btn-success mt-3" type="submit">Se connecter</button>
        </form>
        <div class="my-3">
            <p>Vous n'avez pas de compte ? <a href="{{ path ('app_register') }}">Inscrivez-vous</a></p>
        </div>


    </div>

{% endblock %}
